{
  "manifest_version": 3,
  "name": "Crunchy Comments",
  "version": "1.0.0",
  "description": "Community comments for Crunchyroll - Discuss anime episodes and series with other fans",
  "author": "Your Name",
  "homepage_url": "https://github.com/crunchyroll-community/Crunchy-Comments",
  "icons": {
    "16": "src/icons/icon16.png",
    "32": "src/icons/icon32.png",
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.crunchyroll.com/*"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"]
    }
  ]
}