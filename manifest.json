{
  "manifest_version": 3,
  "name": "Crunchyroll Comments",
  "version": "1.0",
  "description": "Community comments for Crunchyroll",
  "permissions": ["activeTab"],
  "web_accessible_resources": [{
    "resources": ["comments.html"],
    "matches": ["*://*.crunchyroll.com/*"]
  }],
  "content_scripts": [
    {
      "matches": ["*://*.crunchyroll.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}